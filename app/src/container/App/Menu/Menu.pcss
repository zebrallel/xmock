.menu {
    height: 100vh;
    width: 240px;
    position: absolute;
    border-right: #e5e5e5 solid 1px;
    color: #333;

    & .file-item {
        line-height: 40px;
        text-align: center;
        border-bottom: #e5e5e5 solid 1px;
    }

    & .file-item:hover {
        cursor: pointer;
    }

    & .file-item.active {
        background: #006dc8;
        color: #fff;
    }
}
